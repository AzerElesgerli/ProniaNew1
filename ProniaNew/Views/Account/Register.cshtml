@model RegisterVM

<main class="main-content">
	<div class="breadcrumb-area breadcrumb-height"
		 data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
		<div class="container h-100">
			<div class="row h-100">
				<div class="col-lg-12">
					<div class="breadcrumb-item">
						<h2 class="breadcrumb-heading">Login & Register Page</h2>
						<ul>
							<li>Register</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="login-register-area section-space-y-axis-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 pt-5 pt-lg-0">
					<form method="post">
						<div class="login-form">
							<h4 class="login-title">Register</h4>
							<div class="row">
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								<div class="col-md-6 col-12">
									<label asp-for="Name">Name</label>
									<input asp-for="Name" placeholder="Name" />
									<span class="text-danger" asp-validation-for="Name"></span>
								</div>
								<div class="col-md-6 col-12">
									<label asp-for="Surname">Surname</label>
									<input asp-for="Surname" placeholder="Surname" />
									<span class="text-danger" asp-validation-for="Surname"></span>
								</div>
								<div class="col-md-12">
									<label asp-for="Username">Username</label>
									<input asp-for="Username" placeholder="Username" />
									<span class="text-danger" asp-validation-for="Username"></span>
								</div>
								<div class="col-md-12">
									<label asp-for="Email">Email</label>
									<input asp-for="Email" placeholder="Email" />
									<span class="text-danger" asp-validation-for="Email"></span>
								</div>

								
									<div class="col-md-12">
										<label asp-for="Gender">Gender</label>
										<div class="d-flex justify-content-evenly">
										<input asp-for="Gender" type="radio" value="Male" id="Male" />
										<label for="Male">Male</label>

										<input asp-for="Gender" type="radio" value="Female" id="Female" />
										<label for="Female">Female</label>

											<input asp-for="Gender" type="radio" value="BiSexual" id="BiSexual" />
										<label for="BiSexual">BiSexual</label>

										<input asp-for="Gender" type="radio" value="TransSexual" id="TransSexual" />
										<label for="TransSexual">BiSexual</label>
										</div>

									    <input asp-for="Gender" type="radio" value="Hermaphrodite" id="Hermaphrodite" />
										<label for="Hermaphrodite">Hermaphrodite</label>

										<input asp-for="Gender" type="radio" value="MetroSexual" id="MetroSexual" />
										<label for="MetroSexual">MetroSexual</label>

										<input asp-for="Gender" type="radio" value="Conjoined" id="Conjoined" />
										<label for="Conjoined">Conjoined</label>


									<input asp-for="Gender" type="radio" value="NotHuman" id="NotHuman" />
									<label for="NotHuman">NotHuman</label>



								</div>

										<span asp-validation-for="Gender"></span>

									</div>


									}
								</div>
								<div class="col-md-6">
								</div>
								<div class="col-md-6">
									<label asp-for="Password">Password</label>
									<input asp-for="Password" placeholder="Password" />
									<span class="text-danger" asp-validation-for="Password"></span>
								</div>
								<div class="col-md-6">
									<label asp-for="ConfirmPassword">Confirm Password</label>
									<input asp-for="ConfirmPassword" placeholder="Confirm Password" />
									<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
								</div>
								<div class="col-12">
									<button type="submit" class="btn btn-custom-size lg-size btn-pronia-primary">
										Register
									</button>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</main>